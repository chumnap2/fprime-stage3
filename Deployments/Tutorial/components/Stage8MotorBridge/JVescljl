using SerialPorts
using Printf

# --- Serial port setup ---
# Replace with your VESC device
sp = SerialPort("/dev/ttyUSB0", 115200)

# --- Helper functions for VESC protocol ---
function crc16(data::Vector{UInt8})
    crc = 0x0000
    for b in data
        crc = crc ⊻ (b << 8)
        for _ in 1:8
            crc = (crc << 1) ⊻ (0x1021 * ((crc & 0x10000) >> 16))
            crc &= 0xFFFF
        end
    end
    return crc
end

function build_rpm_packet(rpm::Int32)
    payload = [0x05]  # 0x05 = COMM_SET_RPM
    payload_bytes = reverse(reinterpret(UInt8, rpm))  # 4 bytes, little-endian
    payload = vcat(payload, payload_bytes)
    # Wrap packet
    length = UInt16(length(payload))
    packet = UInt8[2]                  # Start byte 0x02
    packet = vcat(packet, UInt8(length & 0xFF), UInt8(length >> 8))
    packet = vcat(packet, payload)
    crc = crc16(payload)
    packet = vcat(packet, UInt8(crc >> 8), UInt8(crc & 0xFF))
    push!(packet, 3)                   # End byte 0x03
    return packet
end

function send_rpm(sp::SerialPort, rpm::Int32)
    packet = build_rpm_packet(rpm)
    write(sp, packet)
end

# --- Simple read function ---
function read_values(sp::SerialPort)
    # Request values packet
    # COMM_GET_VALUES = 4
    payload = [0x04]
    length = UInt16(length(payload))
    packet = UInt8[2, UInt8(length & 0xFF), UInt8(length >> 8]]
    packet = vcat(packet, payload)
    crc = crc16(payload)
    packet = vcat(packet, UInt8(crc >> 8), UInt8(crc & 0xFF), 3)
    write(sp, packet)

    sleep(0.05)  # small delay

    buf = readavailable(sp)
    # Very naive parsing: search for rpm bytes
    # VESC sends 4-byte float for rpm at byte index ~1-4 (depends on FW)
    # For real use, you should implement full packet decoding
    return buf
end

# --- Main loop ---
try
    while true
        send_rpm(sp, 1000)   # Spin motor at 1000 RPM
        sleep(0.05)
        vals = read_values(sp)
        @printf("Raw telemetry: %s\n", vals)
        sleep(0.1)
    end
finally
    send_rpm(sp, 0)          # Stop motor
    close(sp)
end
